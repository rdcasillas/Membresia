@model Iglesias
@{
    ViewData["Title"] = "Nuevo";
    Layout = "~/Views/Shared/_Master.cshtml";
}


<form method="post" asp-action="Nuevo">

    <div class="row wrapper page-heading">
        <div class="col-md-10 col-sm-10 col-xs-12">
            <h2>Agregar Iglesia</h2>
        </div>
        <div class="col-md-2 col-sm-2 hidden-xs text-right">
            <i class="mdi text-danger mdi-church"></i>
        </div>
    </div>

    <div class="ibox float-e-margins" id="ibox-create">
        <div class="ibox-title my-ibox">
            <h5>Datos</h5>
        </div>
        <div class="ibox-content">
            <div class="sk-spinner sk-spinner-double-bounce">
                <div class="sk-double-bounce1"></div>
                <div class="sk-double-bounce2"></div>
            </div>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-4 col-sm-6 col-xs-12 div-size">
                    <label asp-for="iglesia" class="control-label"></label> *
                    <input asp-for="iglesia" class="form-control" placeholder="Iglesia"/>
                    <span asp-validation-for="iglesia" class="text-danger" ></span>
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12 div-size">
                    @Html.LabelFor(model => model.pastor, htmlAttributes: new { @class = "control-label" }) *
                    @Html.TextBoxFor(model => model.pastor, htmlAttributes: new { @class = "form-control", @placeholder = "Pastor" })
                    @Html.ValidationMessageFor(model => model.pastor, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12 div-size">
                    @Html.LabelFor(model => model.ciudad, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.ciudad, htmlAttributes: new { @class = "form-control", @placeholder = "Ciudad" })
                    @Html.ValidationMessageFor(model => model.ciudad, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12 div-size">
                    @Html.LabelFor(model => model.pais, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.pais, htmlAttributes: new { @class = "form-control", @placeholder = "País" })
                    @Html.ValidationMessageFor(model => model.pais, "", new { @class = "text-danger" })
                </div>


            </div>
            <partial name="_GuardaryRegresarBtn" />

        </div>
    </div>
    @Html.HiddenFor(model => model.IDiglesia)
</form>
