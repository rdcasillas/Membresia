@model Personas
@{
    ViewData["Title"] = "Nuevo";
    Layout = "~/Views/Shared/_Master.cshtml";
}

    <form method="post" asp-action="Nuevo">

        <div class="row wrapper page-heading">
            <div class="col-md-10 col-sm-10 col-xs-12">
                <h2>Agregar Persona</h2>
            </div>
            <div class="col-md-2 col-sm-2 hidden-xs text-right">
                <i class="mdi text-danger mdi-account-plus"></i>
            </div>
        </div>

        <div class="ibox float-e-margins" id="ibox-create">
            <div class="ibox-title my-ibox">
                <h5>Datos</h5>
            </div>
            <div class="ibox-content">
                <div class="sk-spinner sk-spinner-double-bounce">
                    <div class="sk-double-bounce1"></div>
                    <div class="sk-double-bounce2"></div>
                </div>
                <div class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nombre</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre *" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="ApPaterno" class="form-control" placeholder="Apellido Paterno *" />
                                <span asp-validation-for="ApPaterno" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="ApMaterno" class="form-control" placeholder="Apellido Materno" />
                                <span asp-validation-for="ApMaterno" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Correo Electrónico</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electrónico" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Teléfono</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <input asp-for="Telefono" class="form-control  phone-mask" placeholder="Teléfono" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Dirección</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="Calle" class="form-control" placeholder="Calle" />
                                <span asp-validation-for="Calle" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="colonia" class="form-control" placeholder="Colonia" />
                                <span asp-validation-for="colonia" class="text-danger"></span>
                            </div>
                            <div class="col-md-2 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>
                            <div class="col-md-2 col-sm-6 col-xs-12 div-size2 ">
                                <input asp-for="CP" class="form-control" placeholder="Código Postal" />
                                <span asp-validation-for="CP" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <label class="control-label">Género</label>
                                <select class="form-control m-b" name="account">
                                    <option>Hombre</option>
                                    <option>Mujer</option>
                                </select>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <label class="control-label">Fecha de Nacimiento</label>
                                <div class="form-group" id="data_1">
                                    <div class="input-group date">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" value="03/04/2014">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12 div-size2 ">
                                <label class="control-label">Estado civil</label>
                                <select class="form-control m-b" name="account">
                                    <option>Soltero</option>
                                    <option>Casado</option>
                                </select>
                            </div>
                            

                        </div>
                    </div>
                </div>

                

                <div class="hr-line-dashed"></div>
                <partial name="_GuardaryRegresarBtn" />

            </div>
        </div>
        @Html.HiddenFor(model => model.IdPersona)
    </form>

